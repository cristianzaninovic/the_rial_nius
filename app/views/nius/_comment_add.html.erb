  <%= simple_form_for model: Comment.new, url: niu_comments_path(@niu), data: { action: "ajax:comment-fields#add_association" } do |comment| %>
    <div class="nested-fields border border-warning rounded p-2 border-2 m-2">
      <%= comment.input :content %>
      <%= comment.hidden_field :nius_user_id, value: current_nius_user.id  %>
      <%= comment.hidden_field :_destroy %>
      <%= link_to "Remove", "#", data: { action: "click->comment-fields#remove_association" } %>
    </div>  
  <% end %>  
