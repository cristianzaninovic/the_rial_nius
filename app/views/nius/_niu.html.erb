<div id="<%= dom_id niu %>">
  <p class="fw-lighter">
    <%= niu.nius_user.email %> said on <%= niu.nius_user.created_at %> this:
  </p>
  <p>
    <h2><%= niu.title %></h2>
  </p>
  <p>
    <h3><%= niu.headline %></h3>
  </p>
  <p>
    <%= niu.content %>
  </p>
  <h4 class="text-secondary">Comments</h4>
  <div class="comments" data-controller="comments">
    <ul class="comment-list" data-target="comments.commentList">
      <% @niu.comments.each do |comment| %>
        <%= render partial: "comments/show", locals: { comment: comment } %>
      <% end %>      
    </ul>
  </div>
  <% unless current_nius_user.nil? %>
    <div class="my-2">
      <%= render partial: "comments/form" %>
    </div>
  <% end %>

</div>
